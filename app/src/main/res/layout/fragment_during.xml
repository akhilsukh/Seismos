<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.akhilsukh01.earthquakepreparednessproject.during">

    <!-- TODO: Update blank fragment layout -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/color2"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView30"
                            android:text="Steps to take during an Earthquake"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubBold"/>

                        <TextView
                            android:id="@+id/textView15"
                            android:text="Staying Safe Indoors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubTitle"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:text="@string/duringpara1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubCapt"/>

                        <TextView
                            android:id="@+id/textView13"
                            android:text="Staying Safe Outdoors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubTitle"/>

                        <TextView
                            android:id="@+id/textView23"
                            android:text="@string/duringpara2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubCapt"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="6dp"
                            android:layout_marginHorizontal="22dp"
                            android:src="@drawable/during1" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
