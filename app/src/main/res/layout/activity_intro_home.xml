<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colortext"
    android:layout_height="match_parent"
    tools:context="com.akhilsukh01.earthquakepreparednessproject.IntroHome">

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SEISMOS"
                android:textSize="34sp"
                android:padding="10dp"
                android:layout_marginBottom="6dp"
                android:background="@color/color2"
                android:textColor="@color/colortext"/>

            <LinearLayout
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/mChecklist"
                    style="@style/CardHome"
                    app:cardBackgroundColor="@color/color2"
                    app:cardCornerRadius="12dp"
                    android:elevation="20dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checklist"
                        style="@style/SubBold"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mInfo"
                    style="@style/CardHome"
                    app:cardBackgroundColor="@color/color2"
                    app:cardCornerRadius="12dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preparatory Information"
                        style="@style/SubBold"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mAlerts"
                    style="@style/CardHome"
                    app:cardBackgroundColor="@color/color2"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earthquake Alerts"
                        style="@style/SubBold"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color2"
                    style="@style/CardHome"
                    android:layout_weight="0"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Latest Earthquakes"
                        style="@style/SubBold"/>

                    <TableLayout
                        android:id="@+id/mQuake"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-8dp">

                            <TextView
                                android:id="@+id/Htitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Location"
                                android:layout_weight="1"
                                android:textColor="@color/colortext"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/Mtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Magnitude"
                                android:layout_margin="4dp"
                                android:gravity="end"
                                android:textColor="@color/colortext"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:id="@+id/locat1"
                                android:text="Location1 ... LOADING"
                                style="@style/SubLoc"/>


                            <TextView
                                android:id="@+id/mag1"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/locat2"
                                android:text="Location2 ... LOADING"
                                style="@style/SubLoc"/>


                            <TextView
                                android:id="@+id/mag2"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/locat3"
                                android:text="Location3 ... LOADING"
                                style="@style/SubLoc"/>

                            <TextView
                                android:id="@+id/mag3"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/locat4"
                                android:text="Location4 ... LOADING"
                                style="@style/SubLoc"/>


                            <TextView
                                android:id="@+id/mag4"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/locat5"
                                android:text="Location5 ... LOADING"
                                style="@style/SubLoc"/>


                            <TextView
                                android:id="@+id/mag5"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/locat6"
                                android:text="Location6 ... LOADING"
                                style="@style/SubLoc"/>


                            <TextView
                                android:id="@+id/mag6"
                                android:text="0.0"
                                style="@style/SubMag"/>
                        </TableRow>


                    </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

</LinearLayout>
