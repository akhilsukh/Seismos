<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.akhilsukh01.earthquakepreparednessproject.InfoBase">

    <!-- TODO: Update blank fragment layout -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:layout_margin="12dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/color2"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView30"
                            android:text="General Information"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubBold"/>

                        <TextView
                            android:id="@+id/textView26"
                            android:text="An earthquake is a sudden, rapid shaking of the earth caused by the shifting of rock beneath the earth’s surface. They strike without warning, at any time of year, day or night. Forty-five U.S. states and territories are at moderate to very high risk of earthquakes. Learn what to do to keep your loved ones safe!."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubCapt"/>

                        <TextView
                            android:id="@+id/textView27"
                            android:text="Practice DROP, COVER and HOLD ON with all members of your household. "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubCapt"/>

                        <TextView
                            android:id="@+id/textView28"
                            android:text="Doorways are no stronger than any other part of a structure so don’t rely on them for protection! During an earthquake, get under a sturdy piece of furniture and hold on."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubCapt"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="6dp"
                            android:layout_marginHorizontal="22dp"
                            android:src="@drawable/home" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

    </LinearLayout>
